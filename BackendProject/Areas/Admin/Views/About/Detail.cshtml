@model AboutVM
@{
    ViewData["Title"] = "Detail";
}

<div class="container mt-5 " style="margin-left:30px">

    <div style="width:400px; height:300px;" class="image">
        <img src="~/img/@Model.Image" style="width:100%" />
    </div>

  
        <h6 class="mb-3">@Model.Title</h6>
        <h6 class="mb-3">@Model.Description</h6>
        <a target="_blank" href="@Model.VideoLink">@Model.VideoLink</a>
 

    <div class="back mt-2">
        <a class="btn btn-info text-white" asp-action="Index">Back</a>
    </div>
</div>