@model AboutVM

@{
    ViewData["Title"] = "Index";
}

<div class="container" style="margin-left:30px">
    <h1 class="text-center mt-3 mb-3">About</h1>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>

                    <th>
                        VideoLink
                    </th>
                    <th>
                        CreatedDate
                    </th>

                    <th>
                        Operations
                    </th>
                </tr>
            </thead>
            <tbody>
             
                    <tr>
                        <td class="py-1">
                            <img src="~/img/@Model.Image" alt="image" />
                        </td>
                        <td class="py-1">
                            @Model.Title.Substring(0, (int)Math.Ceiling(Model.Title.Length * 0.2))

                        </td>
                        <td class="py-1" style="width:200px;white-space:normal" >
                            @Model.Description.Substring(0, (int)Math.Ceiling(Model.Description.Length * 0.5))
                        </td>
                        <td class="py-1" style="width:200px;white-space:normal">
                            @Model.VideoLink
                        </td>

                        <td>
                            @Model.CreatedDate.ToString("MM/dd/yyyy")
                        </td>
                        <td>
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@Model.Id">Detail</a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
           
                        </td>
                    </tr>
             

            </tbody>
        </table>
    </div>

</div>